extends partials/layout.pug

block content
  .heading
    h1 Login
    if msg
      h2= msg
  .login-form
    form(method="POST")
      .form-group
        label(for='username') User Name
        input.form-control#userName(
          type='username'
          name='username'
          placeholder='JoeShep'
          required
        )
      .form-group
        label(for='password') Password
        input.form-control#password(
          type='password'
          name='password'
          placeholder='*********'
          required
        )
      .contact-form__submit
        a.btn.btn-danger.btn-lg(href='/') Cancel
        input.btn.btn-success.btn-lg(type='submit' value='Login')
